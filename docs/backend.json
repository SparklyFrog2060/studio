{
  "entities": {
    "Sensor": {
      "title": "Sensor",
      "type": "object",
      "description": "Represents a user-created sensor with technical specifications.",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the sensor."
        },
        "brand": {
          "type": "string",
          "description": "The brand of the sensor."
        },
        "link": {
          "type": "string",
          "format": "uri",
          "description": "A URL link to the sensor's product page."
        },
        "price": {
          "type": "number",
          "description": "The price of the sensor."
        },
        "priceEvaluation": {
          "type": "string",
          "enum": ["good", "medium", "bad"],
          "description": "The evaluation of the sensor's price."
        },
        "connectivity": {
          "type": "string",
          "enum": ["matter", "zigbee", "tuya", "other_app", "bluetooth"],
          "description": "The connectivity protocol of the sensor."
        },
        "score": {
          "type": "number",
          "description": "The calculated score of the sensor from 1 to 10."
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "A list of tags associated with the sensor."
        },
        "specs": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "value": {
                "type": "string"
              },
              "evaluation": {
                "type": "string",
                "enum": ["good", "medium", "bad"]
              }
            },
            "required": ["id", "name", "value", "evaluation"]
          },
          "description": "A list of technical specifications for the sensor."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the sensor was created."
        }
      },
      "required": ["name", "brand", "price", "priceEvaluation", "connectivity", "score", "tags", "specs", "createdAt"]
    }
  },
  "auth": {
    "providers": [
      "anonymous"
    ]
  },
  "firestore": {
    "collections": {
      "sensors": {
        "schema": {
          "$ref": "#/entities/Sensor"
        },
        "description": "Collection to store all user-created sensors."
      }
    }
  }
}
