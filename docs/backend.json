    "Floor": {
      "title": "Floor",
      "type": "object",
      "description": "Represents a floor in the house.",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the floor."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the floor was created."
        },
        "layout": {
          "type": "object",
          "description": "Stores the visual layout of the floor.",
          "properties": {
            "walls": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": { "type": "string" },
                  "start": {
                    "type": "object",
                    "properties": { "x": { "type": "number" }, "y": { "type": "number" } }
                  },
                  "end": {
                    "type": "object",
