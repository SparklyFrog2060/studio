rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /sensors/{sensorId} {
      allow read, write: if true; // Allow all reads and writes for now
    }
    match /switches/{switchId} {
      allow read, write: if true; // Allow all reads and writes for now
    }
    match /voice_assistants/{assistantId} {
      allow read, write: if true; // Allow all reads and writes for now
    }
    match /gateways/{gatewayId} {
      allow read, write: if true; // Allow all reads and writes for now
    }
    match /lighting/{lightingId} {
      allow read, write: if true; // Allow all reads and writes for now
    }
    match /floors/{floorId} {
      allow read, write: if true; // Allow all reads and writes for now
    }
    match /rooms/{roomId} {
      allow read, write: if true; // Allow all reads and writes for now
    }
  }
}
