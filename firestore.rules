rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /sensors/{sensorId} {
      allow read, write: if request.auth != null;
    }
    match /switches/{switchId} {
      allow read, write: if request.auth != null;
    }
    match /voice_assistants/{assistantId} {
      allow read, write: if request.auth != null;
    }
    match /gateways/{gatewayId} {
      allow read, write: if request.auth != null;
    }
    match /lighting/{lightingId} {
      allow read, write: if request.auth != null;
    }
    match /other_devices/{deviceId} {
      allow read, write: if request.auth != null;
    }
    match /floors/{floorId} {
      allow read, write: if request.auth != null;
    }
    match /rooms/{roomId} {
      allow read, write: if request.auth != null;
    }
    match /house_config/{configId} {
      allow read, write: if request.auth != null;
    }
  }
}
